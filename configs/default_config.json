{
  "experiment_name": "sage_ad_benchmark",
  "description": "SAGE-AD benchmark evaluation across multiple LLMs and cohorts",

  "models": [
    "gpt-4o",
    "gpt-4.1",
    "gemini-2.5-flash",
    "gemini-2.5-pro",
    "claude-4.5-sonnet"
  ],

  "cohorts": [
    "ELSA",
    "HRS",
    "SHARE"
  ],

  "cohort_data_paths": {
    "ELSA": "data/ELSA/elsa_harmonized.csv",
    "HRS": "data/HRS/hrs_harmonized.csv",
    "SHARE": "data/SHARE/share_harmonized.csv"
  },

  "primary_cohort": "HRS",

  "inference_strategies": [
    "zero_shot",
    "few_shot",
    "cot"
  ],

  "prediction_horizons": [1, 2, 3, 4],

  "few_shot_examples_count": 5,

  "evaluation": {
    "bootstrap_iterations": 5000,
    "confidence_level": 0.95,
    "test_split": 0.2
  },

  "analysis_flags": {
    "run_strategy_comparison": true,
    "run_temporal_analysis": true,
    "run_cross_cohort": true,
    "run_interpretability": true,
    "run_scaling_analysis": false
  },

  "interpretability": {
    "ablation_sample_size": 100,
    "word_cloud_top_n": 50,
    "run_domain_ablation": true,
    "run_interaction_analysis": true,
    "run_reasoning_analysis": true
  },

  "api_settings": {
    "temperature": 0,
    "max_tokens": 512,
    "max_tokens_cot": 1024,
    "timeout_seconds": 60,
    "retry_attempts": 3
  },

  "huggingface_settings": {
    "use_4bit_quantization": true,
    "device_map": "auto",
    "load_in_8bit": false
  },

  "output_dir": "./results",
  "cache_dir": "./cache",
  "log_dir": "./logs",

  "random_seed": 42,

  "verbose": true,
  "save_predictions": true,
  "save_reasoning": true,

  "parallel_processing": {
    "enabled": false,
    "max_workers": 4
  }
}
